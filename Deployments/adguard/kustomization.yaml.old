apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

namespace: adguard

resources:
  - 010-Namespace.yaml
  - 020-Issuer.yaml
  - 021-Cert.yaml
  - 030-Volumes.yaml
  - 040-Deployment.yaml
  - 050-Service.yaml
  - 060-Ingress.yaml

secretGenerator:
  - name: adguard-secrets
    literals:
      - adguard_ip=${{ secrets.adguard_ip }}

patches:
  - target:
      version: v1
      namespace: adguard
      kind: Service
    path: patch.yaml


